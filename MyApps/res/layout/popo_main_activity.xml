<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white" >

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    </FrameLayout>

    <include
        android:id="@+id/bottom_layout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/menu_bg_height"
        android:layout_alignParentBottom="true"
        layout="@layout/popo_menu_layout" />

    <FrameLayout
        android:layout_width="@dimen/menu_height"
        android:layout_height="@dimen/menu_height"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/icon_menu_center"
        android:padding="3dp" >

        <com.nathan.myapps.widget.CircleCustomImageView
            android:id="@+id/userPic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center" />
    </FrameLayout>

</RelativeLayout>